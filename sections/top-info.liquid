    </div>
  </section>

{% schema %}
{
  "name": "infomation",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "セクションタイトル",
      "default": "INFORMATION"
    },
    {
      "type": "text",
      "id":"subTitle",
      "label": "サブタイトル",
      "default": "インフォメーション"
    },
    {
      "type": "text",
      "id": "button",
      "label": "ボタンのテキスト"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "ボタンリンク先"
    }
  ],
  "presets": [
    {
      "name": "top-info"
    }
  ]
}
{% endschema %}
