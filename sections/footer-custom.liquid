    },
    {
      "type": "policy_link",
      "name": "ポリシーリンク",
      "settings": [
        {
          "type": "text",
          "id": "link_title",
          "label": "リンクタイトル"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "リンク先URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name":"カスタムフッター",
      "category": "フッター"
    }
  ]
}
